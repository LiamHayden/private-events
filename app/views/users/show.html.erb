    <div class="row text-center">
      <div class="col">
          <div class="border border-light shadow-sm bg-body rounded m-3 p-3">
          <p class="h1">Attended Events</p>
          <% if @user.attended_events.empty? %>
            <p>No events.</p>
          <% else %>
            <% @user.attended_events.where("date < ?", Date.today).each do |event| %>
              <p>Event: <%= link_to event.name, event_path(event) %> </p>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="col">
        <div class="border border-light shadow-sm bg-body rounded m-3 p-3">
          <p class="h1">Attending Events</p>
          <% if @user.attended_events.where("date  >= ?", Date.today).count.zero? %>
            <p>No events.</p>
          <% else %>
            <% @user.attended_events.where("date >= ?", Date.today).each do |event| %>
              <p>Event: <%= link_to event.name, event_path(event) %> </p>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="border border-light shadow-sm bg-body rounded m-3 p-3">
          <p class="h1">Created Events</p>
          <% @user.created_events.each do | event | %>
            <p>Name: <%= link_to event.name, event_path(event) %> </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>