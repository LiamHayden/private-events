<h1>Name: <%= @event.name %> </h1>
<p>Location: <%= @event.location %></p>
<p>Date: <%= @event.date %> </p>

<%= link_to 'RSVP', rsvp_event_path %> 

<h2>Attendees</h2>
<% if @event.attendees.empty? %>
  <p>No attendees, yet.</p>
<% else %>
  <% @event.attendees.each do |attendee| %>
    <p>User: <%= attendee.name %> </p>
  <% end %>
<% end %>
