<div class="container d-flex justify-content-center">
  <div class="border border-2 rounded-3 p-5">
    <p class="h1 text-center">Create Event</p>
    <%= form_with model: @event, class: "needs-validation", date: { turbo: false } do |form| %>
      <div class="mb-3 mt-3">
        <%= form.label "Name:", class: "form-label" %>
        <%= form.text_field :name, class: "form-control", required: true %>
        <div class="valid-feedback">Valid.</div>
        <div class="invalid-feedback">Please fill out this field.</div>
      </div>
      <div class="mb-3">
        <%= form.label "Location:", class: "form-label" %>
        <%= form.text_field :location, class: "form-control", required: true %>
      </div>
      <div class="mb-3">
        <%= form.label "Date:", class: "form-label" %>
        <%= form.datetime_select :date, class: "form-control", required: true %>
      </div>
      <div class="mb-3">
        <% if user_signed_in? %>
          <%= form.submit "Create" %>
        <% else %>
          <%= form.submit "Sign in to create" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
