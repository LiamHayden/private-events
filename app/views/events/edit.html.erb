<%= form_with model: @event do |form| %>
  <div>
    <%= form.label "Name" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <% @event.errors.full_messages_for(:name).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label "Location" %>
    <%= form.text_field :location %>
  </div>

  <div>
    <% @event.errors.full_messages_for(:location).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label "Date" %>
    <%= form.datetime_select :date%>
  </div>

  <div>
    <% @event.errors.full_messages_for(:date).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>

	<%= form.submit "Update" %>
<% end %>